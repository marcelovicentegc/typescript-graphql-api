{
  "name": "typescript-graphql-api",
  "version": "1.0.0",
  "main": "index.tsx",
  "author": "Marcelo Cardoso",
  "license": "MIT",
  "scripts": {
    "build": "rimraf build && tsc",
    "gen": "wait-on tcp:8080 && graphql-codegen --config codegen.api.yml && wait-on tcp:8080 && graphql-codegen --config codegen.web.yml && wait-on tcp:8080 && graphql-codegen --config codegen.android.yml && wait-on tcp:8080",
    "start": "cross-env NODE_ENV=development nodemon",
    "get:redis": "docker run --name graphql_api_redis -d -p 6379:6379 redis:5",
    "start:redis": "docker start graphql_api_redis",
    "stop:redis": "docker stop graphql_api_redis",
    "get:pg": "docker run --name graphql_api_pg -d -e POSTGRES_PASSWORD=postgres -p 5432:5432 postgres:13",
    "start:pg": "docker start graphql_api_pg",
    "stop:pg": "docker stop graphql_api_pg",
    "migrate": "ts-node -r dotenv/config ./node_modules/typeorm/cli.js migration:run",
    "makemigrations": "ts-node -r dotenv/config ./node_modules/typeorm/cli.js migration:generate --name",
    "undomigration": "ts-node -r dotenv/config ./node_modules/typeorm/cli.js migration:revert",
    "createmigration": "typeorm migration:create --dir src/migrations --name",
    "launch": "cross-env NODE_ENV=production node ./dist/index.js"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^3.0.0",
    "@graphql-codegen/kotlin": "^1.17.9",
    "@graphql-codegen/typescript": "^1.17.11",
    "@graphql-codegen/typescript-operations": "^1.17.8",
    "@graphql-codegen/typescript-react-apollo": "^1.17.7",
    "@graphql-codegen/typescript-resolvers": "^1.17.10",
    "@types/apollo-upload-client": "^8.1.3",
    "@types/connect-redis": "0.0.14",
    "@types/express": "^4.17.1",
    "@types/express-session": "^1.17.0",
    "@types/graphql": "^14.5.0",
    "@types/ioredis": "^4.0.18",
    "@types/node": "^12.7.11",
    "@types/node-fetch": "^2.5.3",
    "@types/pg": "^7.11.2",
    "@types/react": "^16.9.53",
    "cross-env": "^6.0.3",
    "graphql-toolkit": "^0.7.5",
    "nodemon": "^1.19.3",
    "rimraf": "^3.0.0",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^4.0.3",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@apollo/react-common": "^3.1.4",
    "@apollo/react-hoc": "^4.0.0",
    "@sentry/node": "^5.27.2",
    "@sentry/tracing": "^5.27.2",
    "apollo-cache-inmemory": "^1.6.3",
    "apollo-client": "^2.6.8",
    "apollo-link-error": "^1.1.12",
    "apollo-link-http": "^1.5.16",
    "apollo-link-ws": "^1.0.19",
    "apollo-server-express": "^2.18.2",
    "apollo-upload-client": "^11.0.0",
    "body-parser": "^1.20.1",
    "connect-redis": "^4.0.3",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-session": "^1.17.1",
    "graphql": "^14.5.8",
    "graphql-tools": "^7.0.2",
    "pg": "^7.12.1",
    "pg-hstore": "^2.3.3",
    "redis": "^3.1.1",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.25"
  },
  "engines": {
    "node": "12.x"
  }
}
